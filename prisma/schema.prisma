generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id            String                @id @default(cuid())
  email         String                @unique
  name          String?
  password      String
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  installations Installation[]
  scenarios     CalculationScenario[]
}

model Installation {
  id      String  @id @default(cuid())
  userId  String
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name    String  @default("My Solar Installation")
  address String?

  // Panel specifications
  panelWattage     Float @default(400)
  numberOfPanels   Int   @default(10)
  sunHoursPerYear  Float @default(950)
  efficiencyFactor Float @default(0.8)

  // Calculated (stored for quick access)
  systemSizeKw        Float?
  yearlyProductionKwh Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  setupCost   SetupCost?
  monthlyData MonthlyData[]
}

model SetupCost {
  id             String       @id @default(cuid())
  installationId String       @unique
  installation   Installation @relation(fields: [installationId], references: [id], onDelete: Cascade)

  solarPanelsCost  Decimal @default(0) @db.Decimal(12, 2)
  inverterCost     Decimal @default(0) @db.Decimal(12, 2)
  batteryCost      Decimal @default(0) @db.Decimal(12, 2)
  mountingKitCost  Decimal @default(0) @db.Decimal(12, 2)
  installationCost Decimal @default(0) @db.Decimal(12, 2)
  loanInterestRate Decimal @default(0) @db.Decimal(5, 4)

  currency String @default("DKK")

  // Calculated total
  totalCost Decimal? @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MonthlyData {
  id             String       @id @default(cuid())
  installationId String
  installation   Installation @relation(fields: [installationId], references: [id], onDelete: Cascade)

  month Int // 1-12
  year  Int

  // Production (kWh)
  production              Float @default(0)
  electricityUsedDirectly Float @default(0)
  sentToGrid              Float @default(0)
  sentToBattery           Float @default(0)

  // Consumption (kWh)
  consumption            Float @default(0)
  usedByBattery          Float @default(0)
  totalFromOwnProduction Float @default(0)
  usedDirectlyFromGrid   Float @default(0)
  usedFromGrid           Float @default(0)
  evCharged              Float @default(0)
  usageWithoutEv         Float @default(0)

  // Cost
  electricityPrice Float @default(0) // kr/kWh
  amountPaid       Float @default(0)
  amountSaved      Float @default(0)
  gridEarnings     Float @default(0)

  // Battery optimization (Better Use of Setup)
  potentialKwhAvoided Float @default(0)
  potentialSavings    Float @default(0)
  arbitrageKwh        Float @default(0)
  arbitrageSavings    Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([installationId, month, year])
}

// New calculation scenario models for Phase 1
model CalculationScenario {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  formulaVersion String   @default("1.0.0")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  input       CalculationInput?
  projections YearlyProjection[]

  @@index([userId])
}

model CalculationInput {
  id         String              @id @default(cuid())
  scenarioId String              @unique
  scenario   CalculationScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  // Location
  latitude  Decimal @db.Decimal(10, 7)
  longitude Decimal @db.Decimal(10, 7)
  priceArea String // "DK1" or "DK2"

  // Roof
  roofAreaM2     Decimal @db.Decimal(8, 2)
  azimuthDegrees Decimal @db.Decimal(5, 2)
  tiltDegrees    Decimal @db.Decimal(5, 2)

  // System costs
  systemCostDkk       Decimal @db.Decimal(12, 2)
  panelsCostDkk       Decimal @db.Decimal(12, 2)
  inverterCostDkk     Decimal @db.Decimal(12, 2)
  installationCostDkk Decimal @db.Decimal(12, 2)

  // Energy
  electricityRateDkk   Decimal @db.Decimal(6, 4)
  selfConsumptionRate  Decimal @db.Decimal(5, 4)
  annualConsumptionKwh Decimal @db.Decimal(10, 2)

  // Financial
  inflationRate            Decimal @db.Decimal(5, 4)
  electricityInflationRate Decimal @db.Decimal(5, 4)
  maintenanceCostDkk       Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model YearlyProjection {
  id         String              @id @default(cuid())
  scenarioId String
  scenario   CalculationScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  year Int // 1-25

  // Production and savings
  productionKwh        Decimal @db.Decimal(10, 2)
  savingsNominalDkk    Decimal @db.Decimal(12, 2)
  savingsRealDkk       Decimal @db.Decimal(12, 2)
  cumulativeNominalDkk Decimal @db.Decimal(12, 2)
  cumulativeRealDkk    Decimal @db.Decimal(12, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([scenarioId, year])
  @@index([scenarioId])
}
